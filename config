# sudo cp "/etc/letsencrypt/live/demo.${CUSTOM_DOMAIN}/fullchain.pem" $CA_PATH
# sudo cp "/etc/letsencrypt/live/demo.${CUSTOM_DOMAIN}/privkey.pem" $PK_PATH
# sudo chmod 644 "${TLS_CERT_DIR}/*.pem"

